@page
@model PhamNguyenTrongTuanRazorPages.Pages.Category.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Category</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category.CategoryName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.CategoryName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category.CategoryDesciption)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.CategoryDesciption)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category.CategoryStatus)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.CategoryStatus)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category.NewsArticleCount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.NewsArticleCount)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category.ParentCategory)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Category.ParentCategory != null)
            {
                @Html.DisplayFor(model => model.Category.ParentCategory.CategoryName)
            }
            else
            {
                <span>N/A</span>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Category.CategoryId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
